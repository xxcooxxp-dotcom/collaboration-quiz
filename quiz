    <script>
        function goToQuiz(event) {
            event.preventDefault(); // منع إرسال النموذج
            const name = document.getElementById('name').value;
            document.getElementById('namePage').style.display = 'none'; // إخفاء صفحة الاسم
            document.getElementById('quizPage').style.display = 'block'; // عرض صفحة الأسئلة
        }

        function submitQuiz(event) {
            event.preventDefault(); // منع إرسال النموذج
            const answers = document.querySelectorAll('input[type="radio"]:checked');
            let totalScore = 0;

            answers.forEach(answer => {
                totalScore += parseInt(answer.value);
            });

            const name = document.getElementById('name').value;
            showResult(name, totalScore);
        }

        function showResult(name, score) {
            const resultText = document.createElement('div');
            let resultMessage;
            let description;

            if (score >= 40 && score <= 50) {
                resultMessage = "متعاون جدًا.";
                description = "روح الفريق لديك عالية جدًا، أنت تحب مساعدة الآخرين وتشارك بفاعلية في الإنجازات الجماعية.<br>التعاون هو جزء أصيل من شخصيتك وقيمك.";
            } else if (score >= 30 && score < 40) {
                resultMessage = "متعاون بدرجة جيدة";
                description = "أنت شخص تتعاون وتشارك بنجاح في المواقف الجماعية المهمة، لكنك في بعض الأحيان قد تفضل الاعتماد على نفسك واستقلاليتك.";
            } else if (score >= 20 && score < 30) {
                resultMessage = "متعاون قليلًا";
                description = "تعاونك مشروط بالموقف والحاجة، قد تحتاج إلى بذل جهد أكبر لتعزيز مهارات العمل ضمن الفريق والمشاركة بدورٍ فاعل.";
            } else {
                resultMessage = "تحتاج إلى تطوير التعاون";
                description = "تميل إلى التركيز على أهدافك الفردية. انفتاحك أكثر على العمل الجماعي سيضيف لك الكثير وينقّي مهاراتك الاجتماعية والمهنية.";
            }

            resultText.innerHTML = `
                <h2>نتائج الاختبار</h2>
                <p class="result-message">${resultMessage}</p>
                <p class="description">${description}</p>
                <p class="closing">ختامًا:</p>
                <p class="closing">لا تُعَرفك هذه النتيجة النهائية. سواءً كنت مُحبًا للعمل الجماعي أو تميل إلى الاستقلالية، تذكر أنّ التعاون مهارة يمكنك صقلها دائمًا وتطويرها.</p>
                <p class="student-work">عمل طالبات الصف: 4/2</p>
            `;
            document.body.innerHTML = ''; // مسح المحتوى الحالي
            document.body.appendChild(resultText); // إضافة النتائج
        }
    </script>
